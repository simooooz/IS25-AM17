<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.polimi.ingsw.view.GUI.JoinLobbyController"
      alignment="CENTER" spacing="30.0" prefHeight="600.0" prefWidth="800.0"
      style="-fx-background-color: #2c3e50; -fx-padding: 50;">

    <!-- Title -->
    <Label text="Join Lobby" textFill="WHITE" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

    <!-- Lobby Name Section -->
    <VBox alignment="CENTER" spacing="10.0">
        <Label text="Lobby Name" textFill="WHITE" style="-fx-font-size: 16px;"/>
        <TextField fx:id="lobbyNameField" promptText="Enter lobby name"
                   prefWidth="300.0" style="-fx-font-size: 14px;"/>
    </VBox>

    <!-- Info Label -->
    <Label text="Enter the name of the lobby you want to join"
           textFill="#bdc3c7" style="-fx-font-size: 12px;" wrapText="true" maxWidth="400"/>

    <!-- Error Label -->
    <Label fx:id="errorLabel" textFill="#e74c3c" visible="false"
           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="30.0">
        <Button text="Back" prefWidth="120.0" prefHeight="45.0"
                style="-fx-font-size: 16px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;"
                onAction="#handleBack"/>
        <Button text="Join Lobby" prefWidth="120.0" prefHeight="45.0"
                style="-fx-font-size: 16px; -fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 5;"
                onAction="#handleJoinLobby"/>
    </HBox>

</VBox>