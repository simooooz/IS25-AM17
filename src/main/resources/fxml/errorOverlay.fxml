<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>

<StackPane fx:id="overlayRoot" xmlns:fx="http://javafx.com/fxml" fx:controller="it.polimi.ingsw.view.GUI.fxmlcontroller.ErrorOverlayController"
           style="-fx-background-color: rgba(0, 0, 0, 0.6);"
           prefWidth="600" prefHeight="400">

    <VBox spacing="20" alignment="CENTER">
        <Label fx:id="errorMessageLabel"
               text="Errore!"
               textFill="red"
               style="-fx-font-size: 32px; -fx-font-weight: bold;" />
        <Button text="X" onAction="#closeOverlay" style="-fx-font-size: 16px;"/>
    </VBox>
</StackPane>
