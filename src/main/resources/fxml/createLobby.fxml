<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.polimi.ingsw.view.GUI.fxmlcontroller.CreateLobbyController"
      alignment="CENTER" spacing="30.0" prefHeight="600.0" prefWidth="800.0"
      style="-fx-background-color: #2c3e50; -fx-padding: 50;">

    <!-- Title -->
    <Label text="Create New Lobby" textFill="WHITE" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

    <!-- Lobby Name Section -->
    <VBox alignment="CENTER" spacing="10.0">
        <Label text="Lobby Name" textFill="WHITE" style="-fx-font-size: 16px;"/>
        <TextField fx:id="lobbyNameField" promptText="Enter lobby name (3-18 characters)"
                   prefWidth="300.0" style="-fx-font-size: 14px;"/>
    </VBox>

    <!-- Number of Players Section -->
    <VBox alignment="CENTER" spacing="15.0">
        <Label text="Number of Players" textFill="WHITE" style="-fx-font-size: 16px;"/>
        <HBox alignment="CENTER" spacing="20.0">
            <fx:define>
                <ToggleGroup fx:id="playersGroup"/>
            </fx:define>

            <ToggleButton fx:id="btn2Players" text="2 Players" toggleGroup="$playersGroup"
                          prefWidth="100.0" prefHeight="40.0"
                          style="-fx-font-size: 14px; -fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <ToggleButton fx:id="btn3Players" text="3 Players" toggleGroup="$playersGroup"
                          prefWidth="100.0" prefHeight="40.0"
                          style="-fx-font-size: 14px; -fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <ToggleButton fx:id="btn4Players" text="4 Players" toggleGroup="$playersGroup"
                          prefWidth="100.0" prefHeight="40.0"
                          style="-fx-font-size: 14px; -fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>

    <!-- Game Mode Section -->
    <VBox alignment="CENTER" spacing="15.0">
        <Label text="Game Mode" textFill="WHITE" style="-fx-font-size: 16px;"/>
        <HBox alignment="CENTER" spacing="20.0">
            <fx:define>
                <ToggleGroup fx:id="modeGroup"/>
            </fx:define>

            <ToggleButton fx:id="btnLearnerMode" text="Learner Mode" toggleGroup="$modeGroup"
                          prefWidth="140.0" prefHeight="40.0"
                          style="-fx-font-size: 14px; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <ToggleButton fx:id="btnAdvancedMode" text="Advanced Mode" toggleGroup="$modeGroup"
                          prefWidth="140.0" prefHeight="40.0"
                          style="-fx-font-size: 14px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>

    <!-- Error Label -->
    <Label fx:id="errorLabel" textFill="#e74c3c" visible="false"
           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="30.0">
        <Button text="Back" prefWidth="120.0" prefHeight="45.0"
                style="-fx-font-size: 16px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;"
                onAction="#handleBack"/>
        <Button text="Create Lobby" prefWidth="120.0" prefHeight="45.0"
                style="-fx-font-size: 16px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;"
                onAction="#handleCreateLobby"/>
    </HBox>

</VBox>