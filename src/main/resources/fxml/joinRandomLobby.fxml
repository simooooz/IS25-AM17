<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.polimi.ingsw.view.GUI.fxmlcontroller.JoinRandomLobbyController"
      alignment="CENTER" spacing="30.0" prefHeight="600.0" prefWidth="800.0"
      style="-fx-background-color: #2c3e50; -fx-padding: 50;">

    <!-- Title -->
    <Label text="Join Random Lobby" textFill="WHITE" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

    <!-- Game Mode Section -->
    <VBox alignment="CENTER" spacing="15.0">
        <Label text="Preferred Game Mode" textFill="WHITE" style="-fx-font-size: 16px;"/>
        <HBox alignment="CENTER" spacing="20.0">
            <fx:define>
                <ToggleGroup fx:id="modeGroup"/>
            </fx:define>

            <ToggleButton fx:id="btnLearnerMode" text="Learner Mode" toggleGroup="$modeGroup"
                          prefWidth="140.0" prefHeight="40.0"
                          style="-fx-font-size: 14px; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <ToggleButton fx:id="btnAdvancedMode" text="Advanced Mode" toggleGroup="$modeGroup"
                          prefWidth="140.0" prefHeight="40.0"
                          style="-fx-font-size: 14px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>

    <!-- Info Label -->
    <Label text="The system will find a random lobby matching your preferred game mode"
           textFill="#bdc3c7" style="-fx-font-size: 12px;" wrapText="true" maxWidth="400"/>

    <!-- Error Label -->
    <Label fx:id="errorLabel" textFill="#e74c3c" visible="false"
           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="30.0">
        <Button text="Back" prefWidth="120.0" prefHeight="45.0"
                style="-fx-font-size: 16px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;"
                onAction="#handleBack"/>
        <Button text="Join Random" prefWidth="120.0" prefHeight="45.0"
                style="-fx-font-size: 16px; -fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 5;"
                onAction="#handleJoinRandom"/>
    </HBox>

</VBox>