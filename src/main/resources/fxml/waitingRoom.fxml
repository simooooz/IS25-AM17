<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="30.0" style="-fx-background-color: #2c3e50; -fx-padding: 50;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.GUI.fxmlcontroller.WaitingRoomController">

    <!-- Title -->
    <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="Waiting Room" textFill="WHITE" />

    <!-- Lobby Info Section -->
    <VBox alignment="CENTER" spacing="15.0">
        <Label fx:id="lobbyNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Lobby: [Name]" textFill="WHITE" />

        <HBox alignment="CENTER" spacing="30.0">
            <Label fx:id="gameModeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Mode: Learner" textFill="#3498db" />
            <Label fx:id="maxPlayersLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Max Players: 4" textFill="#e67e22" />
        </HBox>
    </VBox>

    <!-- Players Section -->
    <VBox alignment="CENTER" spacing="20.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Players" textFill="WHITE" />

        <!-- Players List -->
        <VBox fx:id="playersContainer" alignment="CENTER" maxWidth="400.0" prefWidth="400.0" spacing="10.0" style="-fx-background-color: #34495e; -fx-background-radius: 10; -fx-padding: 20;">
            <Label fx:id="playerCountLabel" style="-fx-font-size: 14px; -fx-font-style: italic;" text="1/4 players" textFill="#bdc3c7" />
        </VBox>
    </VBox>

    <!-- Status Section -->
    <VBox alignment="CENTER" spacing="10.0">
        <Label fx:id="statusLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Waiting for players to join..." textFill="#f39c12" />

        <!-- Loading indicator (optional) -->
        <HBox fx:id="loadingIndicator" alignment="CENTER" spacing="5.0">
            <Label style="-fx-font-size: 20px;" text="●" textFill="#3498db">
                <font><Font size="16.0" /></font>
            </Label>
            <Label style="-fx-font-size: 20px;" text="●" textFill="#2980b9">
                <font><Font size="16.0" /></font>
            </Label>
            <Label style="-fx-font-size: 20px;" text="●" textFill="#1abc9c">
                <font><Font size="16.0" /></font>
            </Label>
        </HBox>
    </VBox>

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="30.0">
        <Button onAction="#handleLeaveLobby" prefHeight="56.0" prefWidth="265.0" style="-fx-font-size: 16px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="Leave Lobby" />
    </HBox>

</VBox>
