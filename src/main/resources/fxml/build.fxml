<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<AnchorPane fx:id="root" prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: linear-gradient(to bottom, #0f0f23, #1a1a3a);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.GUI.fxmlcontroller.BuildController">

    <!-- Main container -->
    <HBox spacing="15" style="-fx-font-family: 'Impact'; -fx-padding: 16;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- PANNELLO SINISTRO: Componenti -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">

            <ScrollPane
                    prefHeight="600"
                    prefWidth="500"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    styleClass="scroll-pane"
                    style="-fx-background: transparent; -fx-border-color: transparent;"
            >
                <!-- Flow pane -->
                <FlowPane fx:id="componentsFlowPane" hgap="3" vgap="3">
                </FlowPane>
            </ScrollPane>

            <!-- Other players ship container -->
            <HBox fx:id="otherPlayersContainer" prefWidth="500.0" spacing="2.0" style="-fx-background-color: #2a1a4a; -fx-background-radius: 10; -fx-spacing: 20 0 0 0;">
            </HBox>

        </VBox>

        <!-- PANNELLO CENTRALE: Nave + Pile + Clessidra -->
        <VBox prefWidth="0.0" spacing="15" style="-fx-padding: 20; -fx-background-radius: 8;">

            <!-- PILE DI CARTE E CLESSIDRA -->
            <HBox alignment="CENTER_RIGHT" prefHeight="120" spacing="8">

                <!-- Card piles -->
                <HBox alignment="CENTER" spacing="10">

                    <ImageView fx:id="pile_0" onMouseClicked="#lookCardPile" fitHeight="90" fitWidth="70" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 3, 0, 1, 1);">
                        <image>
                            <Image url="@../images/cards/GT-cards_II_IT_0121.jpg" />
                        </image>
                    </ImageView>

                    <ImageView fx:id="pile_1" onMouseClicked="#lookCardPile" fitHeight="90" fitWidth="70" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 1, 1);" translateX="2" translateY="-2">
                        <image>
                            <Image url="@../images/cards/GT-cards_II_IT_0121.jpg" />
                        </image>
                    </ImageView>

                    <ImageView fx:id="pile_2" onMouseClicked="#lookCardPile" fitHeight="90" fitWidth="70" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 1, 0, 1, 1);" translateX="4" translateY="-4">
                        <image>
                            <Image url="@../images/cards/GT-cards_II_IT_0121.jpg" />
                        </image>
                    </ImageView>

                </HBox>

                <!-- Proportional central space -->
                <Region prefHeight="112.0" prefWidth="110.0" HBox.hgrow="ALWAYS" />

                <!-- Hourglass -->
                <VBox fx:id="timerContainer" alignment="CENTER" spacing="3" style="-fx-background-color: rgba(243,156,18,0.2); -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #f39c12; -fx-border-width: 2; -fx-border-radius: 8;">

                    <Label style="-fx-text-fill: #f39c12; -fx-font-size: 12px; -fx-font-weight: bold;" text="â³ TIME">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>

                    <Label fx:id="hourglassPos" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 4;" text="Position: 2">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>

                    <Label fx:id="timeLeft" style="-fx-text-fill: #f39c12; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: rgba(0,0,0,0.7); -fx-background-radius: 4; -fx-padding: 4;">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>

                </VBox>

            </HBox>

            <!-- Main Ship -->
            <VBox alignment="CENTER" spacing="20">
                <StackPane fx:id="shipContainer" alignment="CENTER" VBox.vgrow="ALWAYS">

                    <ImageView fx:id="shipImageView" fitHeight="350.0" fitWidth="450.0" preserveRatio="true" />

                    <GridPane fx:id="shipGrid" alignment="CENTER" hgap="2" maxHeight="915.0" maxWidth="450.0" prefHeight="915.0" prefWidth="86.0" vgap="2">
                    </GridPane>

                </StackPane>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <Label fx:id="statusLabel" styleClass="error-text"
                   alignment="CENTER_RIGHT"/>

            <HBox alignment="CENTER_RIGHT">

                <Button prefWidth="200" maxWidth="200"
                        onAction="#leftGameHandler" styleClass="button-danger"
                        text="Leave game"/>

                <Button fx:id="setReadyButton" prefWidth="200" maxWidth="200"
                        onAction="#setReadyHandler" styleClass="button"
                        text="Set ready"/>

            </HBox>


        </VBox>

    </HBox>

</AnchorPane>
